{% extends 'block.twig' %}

{% block content %}
	<div class="row">
		<div class="col-xs-12">
			<ul class="recipe-list">
				{% set recipes = custom_recipes ? custom_recipes : all_recipes %}
				{% for recipe in recipes|slice(0, fields.number_to_show ? fields.number_to_show : recipes|length) %}
					<li class="recipe-item">
						<a href="{{recipe.link}}">
							{% include 'partials/image.twig' with {image: recipe.thumbnail} %}
							<div class="overlay">
								<p>{{recipe.title}}</p>
							</div>
						</a>
					</li>
				{% endfor %}
			</ul>
			{% if pagination %}
				{% include 'partials/pagination.twig' with { posts: recipes } %}
			{% endif %}
		</div>
	</div>
{% endblock %}
