{% extends 'block.twig' %}

{% block content %}
	<div class="container">
		<div class="row recipe-wrapper">
			<div>
				{% include 'partials/image.twig' with {image: fields.image, class: 'recipe-image'} %}
			</div>
			<div class="recipe-content">
				<div class="recipe-header">
					<h2>{{post.title}}</h2>
					{% for cat in post.categories %}
						<a href="{{cat.link}}" class="tag {{cat.name|lower}}">{{cat.name}}</a>
					{% endfor %}
				</div>
				<div class="ingredients-directions">
					<div class="ingredients">
						{{fields.ingredients}}
					</div>
					<div class="directions">
						{{fields.directions}}
					</div>
				</div>
			</div>
		</div>
		{% if fields.because_science %}
			<div class="row">
				<div class="col-xs-12">
					<aside class="because-science">
						<h3>Because Science</h3>
						<p>
							{{fields.because_science}}
						</p>
					</aside>
				</div>
			</div>
		{% endif %}
	</div>
{% endblock %}
